    <!-- Product info -->
    <div class="mx-auto max-w-2xl px-4 pt-10 pb-16 sm:px-6 lg:grid lg:max-w-7xl lg:grid-cols-3 lg:grid-rows-[auto,auto,1fr] lg:gap-x-8 lg:px-8 lg:pt-16 lg:pb-24">
      <div class="lg:col-span-2 lg:border-r lg:border-gray-200 lg:pr-8">
        <h1 class="text-2xl font-bold tracking-tight text-gray-900 sm:text-3xl">Inscription nouvelles séances</h1>
      </div>

      <!-- Options -->
      <div class="mt-4 lg:row-span-3 lg:mt-0"
        data-controller="reservation"
        data-default-checkin-date="<%= Date.tomorrow.to_formatted_s(:us_short_date) %>"
        data-default-checkout-date="<%= (Date.tomorrow + 1.day).to_formatted_s(:us_short_date) %>"
        data-seance-price="<%= humanized_money(@gymhouse.price) %>"
      >
        <div class="mt-10 lg:mt-0">
          <h2 class="text-2xl font-medium text-gray-900"><%= humanized_money_with_symbol(@gymhouse.price) %> la séance</h2>

          <div class="isolate -space-y-px rounded-md shadow-sm mt-6">
            <div class="relative border border-gray-300 rounded-md rounded-b-none px-3 py-2 focus-within:z-10 focus-within:ring-1 focus-within:ring-indigo-600 focus-within:border-indigo-600">
              <label for="name" class="block text-xs font-medium text-gray-900 uppercase">Check-in</label>
              <input
                type="text"
                name="name"
                id="name"
                class="block w-full border-0 p-0 text-gray-900 placeholder-gray-500 focus:ring-0 sm:text-sm"
                placeholder="11/30/2022"
                data-reservation-target="checkin"
              >
            </div>
            <div class="relative border border-gray-300 rounded-md rounded-t-none px-3 py-2 focus-within:z-10 focus-within:ring-1 focus-within:ring-indigo-600 focus-within:border-indigo-600">
              <label for="job-title" class="block text-xs font-medium text-gray-900 uppercase">Checkout</label>
              <input
                type="text"
                name="job-title"
                id="job-title"
                class="block w-full border-0 p-0 text-gray-900 placeholder-gray-500 focus:ring-0 sm:text-sm"
                placeholder="12/07/2022"
                data-reservation-target="checkout"
              >
            </div>
          </div>

          <div class="bg-white mt-6">
            <div class="divide-y divide-gray-200">
            </div>
            <dl class="space-y-6">
              <div class="flex items-center justify-between">
                <dt class="text-sm"><%= humanized_money_with_symbol(@gymhouse.price) %> x <span data-reservation-target="numOfSeances">0</span> Séances </dt>
                <dd class="text-sm font-medium text-gray-900">€<span data-reservation-target="seanceTotal">0.00</span></dd>
              </div>
              <div class="flex items-center justify-between">
                <dt class="text-sm">Extras</dt>
                <dd class="text-sm font-medium text-gray-900">€<span data-reservation-target="serviceFee">0.00</span></dd>
              </div>
              <div class="flex items-center justify-between border-t border-gray-200 pt-6">
                <dt class="text-base font-medium">Total</dt>
                <dd class="text-base font-medium text-gray-900">€<span data-reservation-target="total">0.00</span></dd>
              </div>
            </dl>

            <div class="pt-6">
              <button
                data-submit-url="<%= new_gymhouse_reservation_path(@gymhouse) %>"
                data-action="reservation#submitReservation"
                type="submit"
                class="w-full bg-indigo-600 border border-transparent rounded-md shadow-sm py-3 px-4 text-base font-medium text-white hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-offset-gray-50 focus:ring-indigo-500">Confirm order
              </button>
            </div>
          </div>
        </div>
      </div>

      <div class="py-10 lg:col-span-2 lg:col-start-1 lg:border-r lg:border-gray-200 lg:pt-6 lg:pb-16 lg:pr-8">
        <!-- Description and details -->
        <div>
          <h3 class="sr-only">Description</h3>

          <div class="space-y-6">
            <p class="text-base text-gray-900"><%= truncate @gymhouse.description, length: 500 %></p>
            <% if @gymhouse.description.length > 500 %>
              <%= link_to "Show more >", "", class: "text-lg font-medium underline", data: { action: "gymhouse#readDescription" } %>
            <% end %>
          </div>
        </div>

        <%= render "shared/modal", modal_trigger_id: "gymhouse-description-trigger", modal_content: "gymhouses/gymhouse_description", content_params: { gymhouse: @gymhouse } %>

        <div class="mt-10">
          <h3 class="text-sm font-medium text-gray-900">Highlights</h3>

          <div class="mt-4">
            <ul role="list" class="list-disc space-y-2 pl-4 text-sm">
              <li class="text-gray-400"><span class="text-gray-600">King-size bed with orthopedic mattress</span></li>

              <li class="text-gray-400"><span class="text-gray-600">Breakfast is included in the price</span></li>

              <li class="text-gray-400"><span class="text-gray-600">Fast and high quality service</span></li>

              <li class="text-gray-400"><span class="text-gray-600">Peace and quiet</span></li>
            </ul>
          </div>
        </div>

        <div class="mt-10">
          <h2 class="text-sm font-medium text-gray-900">Details</h2>

          <div class="mt-4 space-y-6">
            <p class="text-sm text-gray-600">Hair dryer, refrigerator, mini-bar, air conditioning, towels, slippers, shampoo and hair conditioner</p>
          </div>
        </div>
      </div>
    </div>