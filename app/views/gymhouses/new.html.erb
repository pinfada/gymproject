    </div>
  </div>

  <div class="flex flex-wrap -mx-3 mb-6">
    <div class="w-full px-3">
      <%= f.label :state, class: "block text-sm font-medium leading-5 text-gray-700 sm:mt-px" %>
      <%= f.text_field :state, class: "form-input mt-1 block w-full py-2 px-3 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:shadow-outline-blue focus:border-blue-300 transition duration-150 ease-in-out sm:text-sm sm:leading-5", placeholder: "Enter the state of your gymhouse", :required => 'required' %>
    </div>
  </div>

  <div class="flex flex-wrap -mx-3 mb-6">
