<div data-controller="geolocation" class="container mx-auto py-16">
  <% if signed_in? %>
    <ul role="list" class="grid grid-cols-1 gap-x-4 gap-y-8 sm:grid-cols-4 sm:gap-x-6 lg:grid-cols-5 xl:gap-x-8">
      <% @gymhouses.each do |h| %>
        <%= link_to gymhouse_path(h) do %>
          <li class="relative"
