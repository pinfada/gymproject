              <!-- 
              <img src="https://source.unsplash.com/C6oPXOatFD8" class="object-cover pointer-events-none group-hover:opacity-75">
              -->
              <%= image_tag h.avatar, class: "object-cover pointer-events-none group-hover:opacity-75" %>
